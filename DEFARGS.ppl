def even(num) 
  if num % 2 = 0
     return true
  end
  return false
end

def double(n)
  let &res, n * 2
  &res
end

* Se asume que from > to.
def down_to(from, to)
  let &i from
  while
    if &i = to
       break
    endif
    let &i, &i - 1
  next
  return &i
end

def factorial(n)
  let &fac, 1
  let &i, 1
  while
    if &i < n
       let &fac, &fac + &fac * &i
       let &i, &i + 1
    else
       break   
    endif
  next
  &fac
end

def factorial2(n)
  if 0 >= n
     return 1
  endif
  n * factorial(n-1)
end

