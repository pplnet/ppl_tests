test('lambdas no args', -> { 
    &foo1 := -> {
        return 1
    }
    assertEq(1, &foo1())
    
    &foo2 := lambda() -> {
        return 2
    }
    assertEq(2, &foo2())
})

test('lambdas arg', -> {
    &foo3 := lambda(arg) -> {
        return 3
    }
    assertEq(3, &foo3(3))
    
    &foo4 := lambda(arg) -> {
        return arg
    }
    assertEq(4, &foo4(4))
})

test('lambdas args', -> {
    &sum := lambda(arg1, arg2) -> {
        return arg1 + arg2
    }
    assertEq(5, &sum(3, 2))
})