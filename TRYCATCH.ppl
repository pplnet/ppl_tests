test('try', -> {
    assertSyntaxError('no tiene ni Catch ni Finally', @"
        try
           assertPass()
        end
    ")
})

test('try finally', -> {
    try
        assertPass()
    finally
        &foo := 'bar'
    end
    assertEq('bar', &foo)
})

test('try catch', -> {
    try
        assertPass()
    catch
        ** No se deberia ejecutar
        assertFail()
    end
})

test('try catch throw', -> {
    try
        throw('foo')
    catch
        assertEq('foo', GetError())
    end
})

test('try catch finally throw', -> {
    try
        throw('foo')
        ** No se deberia ejecutar
        &foo := 1
        &exec := SI
    catch
        &foo := 2
        &catched := SI
    finally
        &foo := 3
    end
    assertEq(3, &foo)
    assert(&catched)
    assert(not &exec)
})

test('try catch anidado', -> {
    try
        try
            throw('foo')
        finally
            &foo := 1
        end
        &foo := 2
    catch
        assertEq('foo', GetError())
    end
    assertEq(1, &foo)
})